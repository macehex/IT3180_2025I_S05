<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quanlytoanha.controller.ResidentDashboardController"
            prefHeight="800.0" prefWidth="1200.0">

    <top>
        <HBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="Resident Dashboard" style="-fx-font-size: 24;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20;">
                <!-- Invoices Section -->
                <VBox>
                    <HBox fx:id="invoiceTilePane" spacing="20" alignment="CENTER_LEFT">
                        <!-- Tiles will be added here programmatically -->
                    </HBox>
                </VBox>

                <!-- Online Payment Section -->
                <TitledPane text="Make a Payment" expanded="true">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <ComboBox fx:id="invoiceSelector" promptText="Select Invoice" maxWidth="Infinity"/>
                        <TextField fx:id="amountField" promptText="Amount" editable="false"/>
                        <Button text="Pay Now" onAction="#handlePayment"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                maxWidth="Infinity"/>
                    </VBox>
                </TitledPane>

                <!-- Transaction History -->
                <TitledPane text="Transaction History" expanded="true">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <DatePicker fx:id="fromDate" promptText="From Date"/>
                            <DatePicker fx:id="toDate" promptText="To Date"/>
                            <Button text="Filter" onAction="#filterTransactions"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                        </HBox>
                        <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
                                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="150"/>
                                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
