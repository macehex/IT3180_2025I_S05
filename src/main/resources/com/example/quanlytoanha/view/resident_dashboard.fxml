<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.quanlytoanha.controller.ResidentDashboardController">

    <children>
        <Label fx:id="welcomeLabel" text="Xin chào, [Username] (Cư dân)">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="invoiceHistoryButton"
                        onAction="#handleInvoiceHistoryButton"
                        prefHeight="50.0"
                        prefWidth="300.0"
                        text="Hóa đơn, tra cứu lịch sử"
                        style="-fx-font-size: 16px; -fx-background-color: #007bff; -fx-text-fill: white;"/>

                <Button fx:id="loginHistoryButton"
                        prefHeight="50.0"
                        prefWidth="300.0"
                        text="Quản lý lịch sử đăng nhập"
                        style="-fx-font-size: 16px; -fx-background-color: #6c757d; -fx-text-fill: white;"/>

                <Button fx:id="btnLogout"
                        onAction="#handleLogout"
                        prefHeight="25.0"
                        prefWidth="100.0"
                        text="Đăng xuất ↪"
                        style="-fx-font-size: 14px; -fx-background-color: #dc3545; -fx-text-fill: white;"/>
            </children>
        </VBox>
    </children>

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

</VBox>
