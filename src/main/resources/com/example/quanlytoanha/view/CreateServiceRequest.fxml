<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quanlytoanha.controller.CreateServiceRequestController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Báo cáo Sự cố / Yêu cầu">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label text="Loại yêu cầu (*):" />
        <ComboBox fx:id="reqTypeComboBox" prefWidth="150.0" promptText="Chọn loại..." />

        <Label text="Tiêu đề (*):" />
        <TextField fx:id="titleField" promptText="Ví dụ: Đèn hành lang tầng 5 bị hỏng" />

        <Label text="Mô tả chi tiết (*):" />
        <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Mô tả rõ sự cố bạn gặp phải..." wrapText="true" />

        <Label text="Hình ảnh minh chứng:" />
        <Button fx:id="chooseImageButton" mnemonicParsing="false" onAction="#handleChooseImageButton" text="Chọn ảnh..." />

        <ImageView fx:id="imagePreview" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />

        <Button fx:id="submitButton" layoutX="30.0" layoutY="385.0" mnemonicParsing="false" onAction="#handleSubmitButton" prefHeight="35.0" prefWidth="360.0" text="Gửi Yêu Cầu">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </children>
</VBox>
